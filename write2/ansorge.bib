@article{stoll:BM2020,
  title = {Large-{{Eddy Simulation}} of the {{Atmospheric Boundary Layer}}},
  author = {Stoll, Rob and Gibbs, Jeremy A. and Salesky, Scott T. and Anderson, William and Calaf, Marc},
  year = {2020},
  month = dec,
  journal = {Boundary-Layer Meteorol},
  volume = {177},
