@article{li:HES2013,
  title = {Assessing Parameter Importance of the {{Common Land Model}} Based on Qualitative and Quantitative Sensitivity Analysis},
  author = {Li, J. and Duan, Q. Y. and Gong, W. and Ye, A. and Dai, Y. and Miao, C. and Di, Z. and Tong, C. and Sun, Y.},
